rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Contact Messages: Publicly allow creating new messages (so the form works),
    // but disallow reading/listing them publicly for privacy.
    match /contact_messages/{messageId} {
      allow create: if true;
      allow read: if false;
    }

    // User Data: Strictly limit access to the owner of the data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Recursive match for subcollections (favorites, history, billing, etc.)
      match /{allPaths=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
